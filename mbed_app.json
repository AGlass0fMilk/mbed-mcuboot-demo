{
    "requires": ["bare-metal", "mbedtls", "mcuboot", "flashiap-block-device", "spif-driver", "qspif", "mbed-trace", "serialcobs", "rtos-api"],
    "config": {
        "serial-bootloader-enable": {
            "help": "Build bootloader with serial update support",
            "value": 1
        },
        "use-button": {
            "help": "Use button to trigger waiting for OTA or always delay at boot and wait for OTA to start. Only effective if serial bootloader is enabled.",
            "value": 1
        }
    },
    "target_overrides": {
        "*": {
            "target.restrict_size": "0x20000",
            "target.c_lib": "small"
        },
	"NRF52840_DK": {
            "target.device_has_remove": ["ITM"],
            "target.features_add": ["STORAGE"],
	    "target.features_remove": ["CRYPTOCELL310"],
	    "target.macros_remove": ["MBEDTLS_CONFIG_HW_SUPPORT"],
            "target.components_add": ["QSPIF", "FLASHIAP"],
            "mcuboot.max-img-sectors": 256,
            "qspif.QSPI_MIN_PROG_SIZE": 4
	},
        "EP_AGORA": {
            "target.device_has_remove": ["ITM"],
            "target.features_add": ["STORAGE"],
            "target.features_remove": ["CRYPTOCELL310"],
            "target.macros_remove": ["MBEDTLS_CONFIG_HW_SUPPORT"],
            "target.components_remove": ["QSPIF"],
            "target.components_add": ["SPIF", "FLASHIAP"],
            "mcuboot.max-img-sectors": 256,
            "app.use-button": 0
        }
    }
}
